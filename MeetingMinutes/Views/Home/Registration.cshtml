
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Dorisoy.MM 是一款在线会议纪要生成助手.">
    <meta name="keywords" content="Dorisoy.MM 是一款在线会议纪要生成助手">

    <title>注册 &mdash; MM</title>


    <!-- Styles -->
    <link href="~/content/assets/css/core.min.css" rel="stylesheet" />
    <link href="~/content/assets/css/app.css" rel="stylesheet" />
    <link href="~/content/assets/css/style.min.css" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/Content/assets/img/logo.png">
    <link rel="icon" href="~/Content/assets/img/favicon.ico">

    <style>
        .form-control.is-valid ~ .invalid-feedback {
            display: none;
        }

        .form-control.is-invalid ~ .invalid-feedback {
            display: block;
        }

        .form-group .invalid-feedback {
            display: none;
        }

        .form-group.has-error .invalid-feedback {
            display: block;
        }
    </style>
</head>
<body ng-app="app" ng-controller="cRegistration">
    <div class="row no-gutters min-h-fullscreen bg-white">
        <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url(../Content/assets/img/bg.jpg)" data-overlay="2">
            <div class="row h-100 pl-50">
                <div class="col-md-10 col-lg-8 align-self-end">
                    <img src="~/Content/assets/img/logo.png" width="80x80" alt="...">
                    <br><br><br>
                            <h4 class="text-white">Dorisoy.MM 是一款在线会议纪要生成助手.</h4>
                    <br><br>
                </div>
            </div>
        </div>



        <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
            <div class="px-80 py-30">
                <h4>注册一个账户</h4>
                <p><small>所有字段都是必填字段.</small></p>
                <br>

                <form name="newForm" novalidate role="form">
                    <div class="form-group" show-errors>
                        <label class="require" for="username">用户名</label>
                        <input type="text" class="form-control" id="username" name="username" ng-model="data.Name" ng-required="true">
                        <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.username.$error.required">不能为空.</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group" show-errors>
                        <label class="require" for="email">邮箱地址</label>
                        <input class="form-control" type="email" id="email" name="email" ng-model="data.Email" ng-required="true">
                        <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.email.$error.required">不能为空.</li>
                                <li class="invalid-feedback" ng-if="registrationForm.email.$error">无效的邮件地址.</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group" show-errors>
                        <label class="require" for="password">密码</label>
                        <input ng-model="data.Password" id="password" name="password" class="form-control" type="password" data-provide="pwstrength" ng-required="true" ng-minlength="6" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$/">
                        <small class="form-text">至少需要一个大写、小写和数字.</small>
                         <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.password.$error.required">不能为空.</li>
                                <li class="invalid-feedback" ng-if="newForm.password.$error.minlength">至少6个字符.</li>
                                <li class="invalid-feedback" ng-if="newForm.password.$error.pattern">至少需要一个大写、小写和数字.</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group" show-errors>
                        <label class="require" for="password-conf">确认密码</label>
                        <input ng-model="data.ConfirmPassword" id="confirmpassword" name="confirmpassword" type="password" class="form-control" ng-required="true" @*ng-pattern="data.Password"*@>
                        <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.confirmpassword.$error.required">不能为空.</li>
                                <li class="invalid-feedback" ng-if="data.Password!=data.ConfirmPassword" @*ng-if="newForm.confirmpassword.$error.pattern"*@>这些密码不匹配。再试一次?</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" checked class="custom-control-input">
                            <label class="custom-control-label">我同意 <a class="text-primary" href="#">协议</a></label>
                        </div>
                    </div>

                    <br>
                    <button class="btn btn-bold btn-block btn-primary" type="submit" ng-click="registrationData(data)">注册</button>
                </form>

                <hr class="w-30px">

                <p class="text-center text-muted fs-13 mt-20">已经拥有? <a class="text-primary fw-500" href="~/">去登录</a></p>
            </div>
        </div>
    </div>



    <!-- Scripts -->
    <script src="~/content/assets/js/core.min.js"></script>
    <script src="~/content/assets/js/app.js"></script>
    <script src="~/content/assets/js/script.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/Projects/Global/sweetalert.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Projects/Global/app.js"></script>
    <script src="~/Scripts/Projects/Home/Registration.js"></script>
</body>
</html>
