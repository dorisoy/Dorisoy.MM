
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive admin dashboard and web application ui kit. ">
    <meta name="keywords" content="login, signin">
    <title>Meeting Minutes</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,300i" rel="stylesheet">
    <!-- Styles -->
    <link href="~/content/assets/css/core.min.css" rel="stylesheet" />
    <link href="~/content/assets/css/app.css" rel="stylesheet" />
    <link href="~/content/assets/css/style.min.css" rel="stylesheet" />
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/Content/Admin/img/fabicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <style>
        .form-control.is-valid ~ .invalid-feedback {
            display: none;
        }

        .form-control.is-invalid ~ .invalid-feedback {
            display: block;
        }

        .form-group .invalid-feedback {
            display: none;
        }

        .form-group.has-error .invalid-feedback {
            display: block;
        }

        .img-circle {
            border-radius: 50%;
        }
    </style>

</head>
<body ng-app="app" ng-controller="cLogin">

    <div class="row min-h-fullscreen center-vh p-20 m-0">
        <div class="col-12">
            <div class="card card-shadowed px-50 py-30 w-400px mx-auto" style="max-width: 100%">
                <div class="card card-body text-center py-50">
                    <a href="#">
                        <img src="~/Content/assets/img/logo.png" width="100px" />
                    </a>
                    <!--<h5 class="mt-3 mb-1 text-uppercase" ><a class="hover-primary" href="#">Society of Chittagong IT Professionals</a></h5> -->
                </div>
                <h5 class="text-uppercase text-center">CHANGE PASSWORD</h5>

                <form name="newForm" novalidate role="form">
                    <div class="form-group" show-errors>
                        <label class="require" for="password">New Password</label>
                        <input class="form-control" ng-model="data.NewPassword" id="password" name="password" type="password" data-provide="pwstrength" ng-required="true" ng-minlength="6" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$/">
                        <small class="form-text">Minimum one uppercase, lowercase and number required.</small>
                        <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.password.$error.required">You can't leave this empty.</li>
                                <li class="invalid-feedback" ng-if="newForm.password.$error.minlength">Use at least 6 characters.</li>
                                <li class="invalid-feedback" ng-if="newForm.password.$error.pattern">Minimum one uppercase, lowercase and number required.</li>
                            </ul>
                        </div>   
                    </div>
                    <div class="form-group" show-errors>
                        <label for="confirmpassword" class="require">Confirm Password</label>
                        <input type="password" ng-model="data.ConfirmPassword" class="form-control" id="confirmpassword" name="confirmpassword" ng-required="true" @*ng-pattern="data.NewPassword"*@>
                        <div>
                            <ul class="list-unstyled">
                                <li class="invalid-feedback" ng-if="newForm.confirmpassword.$error.required">You can't leave this empty.</li>
                                <li class="invalid-feedback" ng-if="data.NewPassword!=data.ConfirmPassword" >These passwords don't match.Try again?</li>
                            </ul>
                        </div>   
                    </div>
                    <div class="form-group">
                        <button class="btn btn-bold btn-block btn-primary" type="submit" ng-click="ChangePassword(data)">Change Password</button>
                    </div>
                </form>
            </div>
        </div>

        <footer class="col-12 align-self-end text-center fs-13">
            <p class="mb-0"><small>Copyright © 2019 <a href="http://scitp.org">Dorisoy</a>. All rights reserved.</small></p>
        </footer>
    </div>


    <script src="~/content/assets/js/core.min.js"></script>
    <script src="~/content/assets/js/app.js"></script>
    <script src="~/content/assets/js/script.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Projects/Global/sweetalert.min.js"></script>
    <script src="~/Scripts/Projects/Global/app.js"></script>
    <script src="~/Scripts/Projects/Home/Login.js"></script>
</body>
</html>
